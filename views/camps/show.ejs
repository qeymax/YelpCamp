<% include /partials/header %>

<div class="ui container show">
    <div class="ui grid">
        <div class="four wide column">
            <h2 class="ui header">YelpCamp</h2>
            <div class="ui menu vertical">
                <a href="" class="item">slot</a>
                <a href="" class="item">slot</a>
                <a href="" class="item">slot</a>
            </div>
        </div>
        <div class="ten wide column">
            <div class="ui segment">
                <img class="campPic" src="<%= camp.image %>">
                <div class="ui grid caption">
                    <div class="row name">
                        <div class="eight wide left aligned column">
                            <h4><a href=""><%= camp.name %></a></h4>
                        </div>
                        <div class="right floated right aligned eight wide column">
                            <h4 class="">9$/night</h4>
                        </div>
                    </div>
                    <div class="row name par">
                        <p><%= camp.description %></p>
                    </div>
                    <div class="row par">
                        <p><em>Submitted By <%= camp.author.username %></em></p>
                    </div>
                    <% if (currentUser && camp.author.id.equals(currentUser._id)) { %>
                        <div class="row par editbutton">
                            <a class="ui button orange mini" href="/camps/<%= camp._id %>/edit">Edit</a>
                            <form action="/camps/<%= camp._id %>?_method=DELETE" method="POST" >
                                <button class="ui button red mini">Delete</button>
                            </form>
                        </div>
                    <% } %>
                </div>
            </div>
            <div class="ui segment">
                <div class="ui grid">
                    <div class="row">
                        <div class="right floated right aligned ten wide column column">
                            <a class="ui button" href="/camps/<%= camp._id %>/comments/new">New Comment</a>
                        </div>
                    </div>
                </div>  
                <% camp.comments.forEach(function(comment){ %>
                    <div class="ui stacked segment">
                        <span style="float:right;">2010 , May</span> 
                        <p ><strong ><%= comment.author.username %></strong></p>
                        <p >
                            <%= comment.text %>
                        </p>
                        <% if (currentUser && comment.author.id.equals(currentUser._id)) { %>
                            <a class="ui button orange mini" href="/camps/<%= camp._id %>/comments/<%= comment._id %>/edit">Edit</a>
                            <form style="display:inline;" action="/camps/<%= camp._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST" >
                                <button class="ui button red mini">Delete</button>
                            </form>
                        <% } %>
                    </div>    
                <% }) %>
                    
            </div>
        </div>
    </div>
</div>

<% include /partials/footer %>